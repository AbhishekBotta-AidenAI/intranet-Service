#!/usr/bin/env python
"""
Compatibility shim so the app can be started with
`python main.pyy` the same way as `python main.py`.
"""
from app.config import settings
import uvicorn


if __name__ == "__main__":
    uvicorn.run(
        "app.main:app",
        host=settings.host,
        port=settings.port,
        reload=settings.debug,
    )
